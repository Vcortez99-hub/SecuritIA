# Criar e escrever no arquivo .gitignore
echo "# Ambientes virtuais Python" > .gitignore
echo "venv/" >> .gitignore
echo "env/" >> .gitignore
echo ".env" >> .gitignore
echo "" >> .gitignore
echo "# Cache Python" >> .gitignore
echo "__pycache__/" >> .gitignore
echo "*.py[cod]" >> .gitignore
echo "" >> .gitignore
echo "# IDEs" >> .gitignore
echo ".vscode/" >> .gitignore
echo ".idea/" >> .gitignore
echo "" >> .gitignore
echo "# Dados e modelos" >> .gitignore
echo "*.db" >> .gitignore
echo "*.sqlite" >> .gitignore
echo "models/*.h5" >> .gitignore
echo "data/" >> .gitignore